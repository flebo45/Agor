<?php

 class EComment{
    private $commentId; 
    private $body;
    private $userId;
    private $postId;

    public function __construct($commentId,$body,$userId,$postId){
        $this->commentId = $commentId;
        $this->body = $body;
        $this->userId = $userId;
        $this->postId = $postId;
    }
    public function setCommentId($commentId){
        $this->commentId = $commentId;
    }
    public function getCommentId(){
        return $this->commentId;
    }
    public function setBody($body){
        $this->body = $body;
    }
    public function getBody(){
        return $this->body;
    }
    public function setUserId($userId){
        $this->userId = $userId;
    }
    public function getUserId(){
        return $this->userId;
    }
    public function setPostId($postId){
        $this->postId = $postId;
    }
    public function getPostId(){
        return $this->postId;
    }
}